<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >
    <data>
        <variable
            name="commondata"
            type="com.gypsey.shopifyapp.basesection.models.CommanModel" />
        <variable
            name="categorydata"
            type="com.gypsey.shopifyapp.collectionsection.models.Collection" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintDimensionRatio="1:1.5"
            android:onClick="@{(view) -> categorydata.gridClick(view,categorydata)}"
            android:id="@+id/card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:contentDescription="@string/image"
                    app:imageUrl="@{commondata.imageurl}"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/tes_background"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/name"
                    app:layout_constraintVertical_weight="7"
                    android:adjustViewBounds="true"
                    />
                <com.gypsey.shopifyapp.customviews.MageNativeTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_weight="3"
                    app:texttype="normal"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@{categorydata.category_name}"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:gravity="start|center_vertical" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
