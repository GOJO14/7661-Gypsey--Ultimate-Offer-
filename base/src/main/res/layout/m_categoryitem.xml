<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="commondata"
            type="com.gypsey.shopifyapp.basesection.models.CommanModel" />
        <variable
            name="categorydata"
            type="com.gypsey.shopifyapp.collectionsection.models.Collection" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:cardCornerRadius="5dp"
            android:onClick="@{(view) -> categorydata.blockClick(view,categorydata)}"
            android:id="@+id/card"
            bind:layout_constraintDimensionRatio=".8:.7"
            bind:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:contentDescription="@string/image"
                bind:imageUrl="@{commondata.imageurl}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@drawable/shadow"/>
            <com.gypsey.shopifyapp.customviews.MageNativeTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toBottomOf="@id/card"
                bind:texttype="whitetext"
                android:layout_gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@{categorydata.category_name}"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
