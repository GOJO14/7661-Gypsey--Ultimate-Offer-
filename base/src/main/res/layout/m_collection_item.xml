<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="commondata"
            type="com.gypsey.shopifyapp.basesection.models.CommanModel" />
        <variable
            name="categorydata"
            type="com.gypsey.shopifyapp.collectionsection.models.Collection" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainparent"
        app:cardUseCompatPadding="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:id="@+id/card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="W,0.8:1"
                app:cardUseCompatPadding="true"
                android:onClick="@{(view) -> categorydata.gridClick(view,categorydata)}"
                app:layout_constraintHorizontal_weight=".5">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/tes_background"
                    bind:imageUrl="@{commondata.imageurl}"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@drawable/hv_shadow"/>
                <com.gypsey.shopifyapp.customviews.MageNativeTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:texttype="whitetext"
                    android:layout_gravity="bottom"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="@{categorydata.category_name}"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
