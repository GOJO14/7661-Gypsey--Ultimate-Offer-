<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gypsey.shopifyapp">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.gypsey.shopifyapp.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity android:name=".checkoutsection.activities.OrderSuccessActivity" />

        <service android:name=".notificationsection.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".notificationsection.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".jobservicessection.JobScheduler"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity android:name=".basesection.activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="gc-gypsey.myshopify.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addresssection.activities.AddressList"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity android:name=".basesection.activities.BaseActivity" />
        <activity android:name=".basesection.activities.Weblink" />
        <activity android:name=".basesection.activities.NewBaseActivity" />
        <activity
            android:name=".productsection.activities.ProductList"
            android:launchMode="singleTop" />
        <activity android:name=".productsection.activities.ProductView" />
        <activity
            android:name=".collectionsection.activities.CollectionList"
            android:launchMode="singleTop" />
        <activity
            android:name=".wishlistsection.activities.WishList"
            android:launchMode="singleTop" />
        <activity
            android:name=".cartsection.activities.CartList"
            android:launchMode="singleTop" />
        <activity
            android:name=".ordersection.activities.OrderList"
            android:launchMode="singleTop" />
        <activity
            android:name=".searchsection.activities.AutoSearch"
            android:launchMode="singleTop" />
        <activity android:name=".checkoutsection.activities.CheckoutWeblink" />
        <activity
            android:name=".trialsection.activities.TrialExpired"
            android:launchMode="singleTask" />
        <activity android:name=".homesection.activities.HomePage" />
        <activity
            android:name=".loginsection.activity.LoginActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".userprofilesection.activities.UserProfile"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".loginsection.activity.RegistrationActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".searchsection.activities.SearchByScanner"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".livepreviewsection.LivePreview"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>